option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: application.py  # Specify the path to your WSGI application

packages:
  yum:
    # List any necessary system packages here
    # Example: ImageMagick for image processing
    ImageMagick: []

# To install Python packages listed in requirements.txt
commands:
  install_dependencies:
    command: "pip install -r requirements.txt"

# You can add environment variables here
env:
  FLASK_ENV: production  # Set Flask to production mode
  DATABASE_URL: "your_database_url"  # Replace with your database connection URL if needed
  # Add any other environment variables your application requires

# This section is optional for logging configurations
files:
  "/etc/nginx/conf.d/proxy.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      client_max_body_size 4M;  # Increase the max upload file size if necessary

# Additional commands can be added here if needed
